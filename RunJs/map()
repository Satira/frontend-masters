// This is how map() works. Remember - map() always creates a new Array
const array1 = [1, 4, 9, 16];

// pass a function to map
const map1 = array1.map(x => x * 2);

console.log(map1);

// Lets recreate it like Underscore _.map(). We gonna make it just for array type;
const _ = {};
_.map = function(list, callback) {
  //create an empty array to store the new data
  let storage = [];
  //loopin
  for(let i = 0; i < list.length; i++) {
    storage.push(callback(list[i], i, list));
  }
  
  return storage;
};

// Example
const weapons = ['candlestick', 'lead pipe', 'revolver'];
const makeBroken = function(item) {
  return `broken ${item}`;
}
const brokenWeapons = _.map(weapons, makeBroken);
console.log(brokenWeapons);